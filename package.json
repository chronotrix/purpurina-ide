{
  "name": "scintilla-ide",
  "version": "0.0.1",
  "description": "Scintilla HTML5 Game Engine IDE",
  "main": "src/index.ts",
  "scripts": {
    "build-electron": "webpack --config ./bundler/webpack.config.electron.ts --env.DEV --profile --colors --display-error-details",
    "build-renderer": "npm run clean && webpack --config ./bundler/webpack.config.renderer.ts --progress --env.build --colors --display-error-details",
    "build-dll": "webpack --config ./bundler/webpack.config.renderer.dll.ts --progress --env.DEV --colors --progress",
    "start-browser": "npm run clean && webpack --config ./bundler/webpack.config.renderer.browser.ts --progress --env.HOT --colors --display-error-details",
    "start-electron": "cross-env HOT=1 NODE_ENV=development electron ./dist/app.js",
    "start-renderer": "cross-env NODE_ENV=development ts-node ./node_modules/webpack-dev-server/bin/webpack-dev-server --config ./bundler/webpack.config.renderer.dev.ts --progress --colors --display-error-details",
    "dev": "npm run clean && npm run build-electron && cross-env START_HOT=1 npm run start-renderer",
    "build": "npm run clean && npm run build-main && npm run build-renderer",
    "clean": "rm -fr dist"
  },
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scintilla-engine/scintilla-ide.git"
  },
  "keywords": [
    "scintilla",
    "game",
    "engine",
    "html5",
    "IDE",
    "editor"
  ],
  "author": "Tobias Ulrich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scintilla-engine/scintilla-ide/issues"
  },
  "homepage": "https://github.com/scintilla-engine/scintilla-ide#readme",
  "devDependencies": {
    "@types/copy-webpack-plugin": "^4.4.2",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.6",
    "@types/redux-logger": "^3.0.6",
    "@types/webpack": "^4.4.9",
    "@types/webpack-merge": "^4.1.3",
    "awesome-typescript-loader": "^5.2.0",
    "browser-sync": "^2.24.6",
    "browser-sync-webpack-plugin": "^2.2.2",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "electron": "^2.0.5",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "html-webpack-plugin": "^3.2.0",
    "path": "^0.12.7",
    "style-loader": "^0.23.0",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "typescript": "^3.0.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.8",
    "webpack-merge": "^4.1.3"
  },
  "dependencies": {
    "@phosphor/widgets": "^1.6.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "hyperhtml": "^2.13.0"
  }
}
