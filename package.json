{
  "name": "scintilla-ide",
  "version": "1.0.0",
  "description": "Scintilla HTML5 Game Engine IDE",
  "main": "src/index.ts",
  "scripts": {
   
    "build-main": "npm run clean && webpack --config webpack.config.electron.js --profile --colors --display-error-details --display-cached",
    "build-renderer": "",
    "start-electron": "cross-env NODE_ENV=production electron ./build/index.js",
    "start-hot": "cross-env HOT=1 NODE_ENV=development electron ./build/index.js",
    "clean": "rm -fr build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scintilla-engine/scintilla-ide.git"
  },
  "keywords": [
    "scintilla",
    "game",
    "engine",
    "html5",
    "IDE"
  ],
  "author": "Tobias Ulrich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scintilla-engine/scintilla-ide/issues"
  },
  "homepage": "https://github.com/scintilla-engine/scintilla-ide#readme",
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "webpack-cli": "^3.0.8"
  },
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-scripts": "1.1.4",
    "electron": "^2.0.5",
    "path": "^0.12.7",
    "ts-loader": "^4.4.2",
    "typescript": "^2.9.2",
    "webpack": "^4.16.1",
    "webpack-merge": "^4.1.3"
  }
}