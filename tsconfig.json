{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "allowJs": true,
    "importsNotUsedAsValues": "remove",
    "lib": ["esnext", "dom"],
    "paths": {
      "*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@shared": ["src/shared"],
      "@main": ["src/main"],
      "@main/*": ["src/main/*"],
      "@renderer": ["src/renderer"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "./src/**/*",
    "./index.d.ts",
    "./src/main/main.d.ts",
    "./src/renderer/launcher/constants.d.ts"
  ],
  "exclude": ["dist", "./src/engine", "engine"]
}
