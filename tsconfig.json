{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "*": [
        "types/*"
      ],
      "shared": [
        "src/shared"
      ],
      "maestro": [
        "src/shared/maestro"
      ],
      "renderer": [
        "src/renderer"
      ],
      "main": [
        "src/main"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src/main/main.d.ts",
    "types/*.d.ts"
  ],
  "exclude": [
    "dist",
    "src/engine",
    "engine"
  ]
}
