{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "*": [
        "src/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@shared": [
        "src/shared"
      ],
      "renderer": [
        "src/renderer"
      ],
      "main": [
        "src/main"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*",
    "./src/main/main.d.ts",
    "./src/renderer/launcher/constants.d.ts"
  ],
  "exclude": [
    "dist",
    "./src/engine",
    "engine"
  ]
}
