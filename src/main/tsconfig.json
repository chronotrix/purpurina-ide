{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "../../out/ts/main",
    "module": "ESNext",
    "lib": ["esnext"],
    "typeRoots": [
      "../../types",
      "../../node_modules/@types",
      "./types"
    ],
    "paths": {
      "@main/*": ["src/main/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "../../types/**/*",
    "src/main/**/*",
    "../../config/electron-hmr/main-hmr.ts"
  ],
  "references": [
    {"path": "../shared"}
  ]
}
