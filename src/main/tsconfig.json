{
  "extends": "../../tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es2015"
    ],
    "paths": {
      "*": [
        "./types"
      ]
    },
    "sourceMap": true,
    // "pretty": true,
    "newLine": "LF",
    "allowSyntheticDefaultImports": true,
    // "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "strictNullChecks": false,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "../renderer"
  ],
  "include": [
    "node_modules/@types/**/*.d.ts",
    "../shared/types/**/*.ts",
    "./types/**/*.d.ts",
    "./**/*.ts", 
    "../shared/types/nodesTypes.ts", 
    "../shared/types/types.ts", "../shared/types/index.default.ts"
  ]
}