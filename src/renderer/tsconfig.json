{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "../shared/types/*"
      ]
    },
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es5",
      "dom"
    ],
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "../shared/types"
    ]
  },
  "exclude": [
    "../src/main",
    "../src/engine",
    "**/*.tsx"
  ],
  "references": [
    {
      "path": "../shared/types/*.d.ts"
    }
  ],
  "include": [
    "node_modules/@types/**/*.d.ts",
    "../shared/types/**/*.d.ts",
    "./types/**/*.d.ts",
    "../shared/types/nodesTypes.ts", 
    "../shared/types/types.ts"
  ]
}