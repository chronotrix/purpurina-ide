{
  "extends": "../tsconfig.base.json",
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es2015"
    ],
    "paths": {
      "*": [
        "./types"
      ]
    },
    "sourceMap": true,
    // "pretty": true,
    "newLine": "LF",
    "allowSyntheticDefaultImports": true,
    // "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "strictNullChecks": false,
    "typeRoots": [
      "node_modules/@types",
    ],
  },
  "exclude": [
    "node_modules",
    "../renderer"
  ],
  "include": [
    "node_modules/@types/**/*.d.ts",
    "../shared/types/**/*.d.ts",
    "./types/**/*.d.ts",
    "./**/*.ts",
  ],
  // "references": [
  //   {
  //     "path": "../shared"
  //   }
  // ]
}