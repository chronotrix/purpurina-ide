{
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom",
      "scripthost",
      "dom.iterable"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "paths": {
      "*": [
        "./types"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "node_modules/@types/**/*.d.ts",
    "./**/*.d.ts",
    "types/index.d.ts"
  ],
  "exclude": [
    "dist"
  ]
}
